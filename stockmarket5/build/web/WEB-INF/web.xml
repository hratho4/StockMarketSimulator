<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>userRegistrationServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.userRegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SellStockServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.SellStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>buyStockServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.buyStockServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.contactServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>contactUsServlet</servlet-name>
        <servlet-class>com.uic.cs440.stockmarket.servlets.contactUsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userRegistrationServlet</servlet-name>
        <url-pattern>/userRegistrationServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SellStockServlet</servlet-name>
        <url-pattern>/SellStockServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>buyStockServlet</servlet-name>
        <url-pattern>/buyStockServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactServlet</servlet-name>
        <url-pattern>/contactServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>contactUsServlet</servlet-name>
        <url-pattern>/contactUsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
